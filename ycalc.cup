/* The grammar rules */

s ::= lista_funcao
            PROGRAM  
            STARTPRG 
            list_command 
            ENDPRG   
            ;

list_command ::= list_command command
               | command
               ;



leiaa    ::= LEIA
            ID
            ;    

list_vector ::= list_vector vector
               | vector
               ;


vector ::= ID
           LCOL
           NUMBER
           RCOL
           ;

command ::=    declare_variable  
            |  assign            
            |  writel            
            |  iff
            |  enquanto
            |  paraa
            |  leiaa               
            ;

writel      ::= WRITELINE expr_part
            ;

iff         ::= IFF expr_list 
                THENN 
                list_command
                ELSEE
                list_command
                ENDELSE
            ;

   
declare_variable ::= type assign
                  | type list_vector
                  | type ID
                    ;


assign		::= ID
                ATTRIB 
                expr_list
                | vector 
                ATTRIB 
                expr_list
                | ID 
                ATTRIB
                call_func
                ;


expr_list ::= expr_list expr_part 
	         | expr_part
            ;


expr_part ::= expr
	        ;


expr      ::= expr PLUS expr   
	        | expr MINUS expr    
           | expr TIMES expr 
	        | expr DIVIDE expr 
           | expr GREATER expr
           | expr EQUALS expr
           | expr LESS expr
           | LPAREN expr RPAREN  
           | ID
           | NUMBER
	        ;

call_func ::= ID
               LPAREN
               param_func
               RPAREN
               ;

param_func ::= param_func expr_part
               | param_func vector
               |
               ;

enquanto  ::= ENQUANTO expr_list
              FACA
              list_command
              FIMENQUANTO
             ;

paraa   ::= PARA
            ID
            DE
            NUMBER
            ATE
            NUMBER
            PASSO
            NUMBER
            FACA
            list_command
            FIMPARA
            ;


type ::=   DECFLOAT
         | DECLINT
         ;


lista_funcao ::=  lista_funcao func  
                  | func
                  | /*empty*/
                  ;


func ::= FUNCAO 
         type 
         ID 
         LPAREN 
         list_param 
         RPAREN
         FUNCAOINI 
         list_command 
         FUNCAOFIM
         ;


param ::= type 
          ID
          ;


list_param ::= list_param param 
               | param
               | /*empty*/
               ;