/* ------------Declaration of Terminals and Non Terminals Section----------- */
/* Terminals (tokens returned by the scanner). */
terminal            PLUS, MINUS, TIMES, DIVIDE,  LPAREN, RPAREN, EQUALS, GREATER,LESS, PROGRAM, STARTPRG, ENDPRG, WRITELINE, DECLINT, DECFLOAT, RCOL, LCOL;
terminal            IFF, E, OU, THENN, ELSEE, ENDELSE, ATTRIB, PARA, DE, ATE, LEIA, FIMPARA, ENQUANTO, FUNCAO, FUNCAOINI, FUNCAOFIM, PASSO, FACA, FIMENQUANTO;
terminal String	  ID;
terminal Integer    NUMBER;        // our scanner provides numbers as integers

/* Non terminals */
non terminal            s, lista_funcao, call_func, param_func,  list_command, command,expr_part, expr_list, assign, leiaa, list_param, param, writel, declare_variable, iff, enquanto, vector, list_vector, func, type, paraa;
non terminal Integer    expr;      // used to store evaluated subexpressions

/* Precedences */
precedence left ID,ATTRIB;
precedence left DECLINT,DECFLOAT;
precedence left ID,FUNCAO;
precedence left ID;
precedence left NUMBER;
precedence left EQUALS;
precedence right THENN, ELSEE ;
precedence left GREATER, LESS;
precedence left PLUS, MINUS;
precedence left TIMES, DIVIDE;
precedence left LPAREN, RPAREN;



